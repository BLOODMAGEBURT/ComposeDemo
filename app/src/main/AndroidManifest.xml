<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".ComposeApp"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeDemo"
        tools:targetApi="31">
        <activity
            android:name=".LazyColumnActivity"
            android:exported="false"
            android:label="@string/title_activity_lazy_column"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".ZoomActivity"
            android:exported="false"
            android:label="@string/title_activity_zoom"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".AnchorActivity"
            android:exported="false"
            android:label="@string/title_activity_anchor"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".DrawScopeActivity"
            android:exported="false"
            android:label="@string/title_activity_draw_scope"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".AnimEffectActivity"
            android:exported="false"
            android:label="@string/title_activity_anim_effect"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".PagerActivity"
            android:exported="false"
            android:label="@string/title_activity_pager"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".CustomTextActivity"
            android:exported="false"
            android:label="@string/title_activity_custom_text"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".DragActivity"
            android:exported="false"
            android:label="@string/title_activity_drag"
            android:theme="@style/Theme.ComposeDemo" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>